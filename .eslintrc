{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true
  },
  "extends": ["standard", "standard-react"],
  "rules": {
    "object-curly-spacing": ["error", "always"],
    "eol-last": "off",
    "semi": ["error", "never"],
    "no-console": "warn",
    "import/no-extraneous-dependencies": {
      "moduleDirectories": ["./"]
    },
    "no-restricted-syntax": "warn",
    "react/prop-types": "warn",
    "react/no-unescaped-entities": ["error", {
      "forbid": [">", "\"", "}"]
    }],
    "comma-dangle": ["error", {
      "arrays": "always",
      "objects": "always"
    }]
  }
}